<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TakagiSugeno</title>

    <environment names="Development">
        <!--<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />-->
        <link rel="stylesheet" href="https://bootswatch.com/spacelab/bootstrap.min.css" />
        <link rel="stylesheet" href="~/css/site.css" />
        <link rel="stylesheet" href="~/scrollbars/jquery.mCustomScrollbar.min.css" />
        <script src="~/lib/jquery/dist/jquery.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
        <script src="~/lib/jquery.canvasjs.min.js"></script>
        <script src="~/scrollbars/jquery.mCustomScrollbar.concat.min.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
    </environment>
    <environment names="Staging,Production">
        <link rel="stylesheet" href="https://ajax.aspnetcdn.com/ajax/bootstrap/3.3.6/css/bootstrap.min.css"
              asp-fallback-href="~/lib/bootstrap/dist/css/bootstrap.min.css"
              asp-fallback-test-class="sr-only" asp-fallback-test-property="position" asp-fallback-test-value="absolute" />
        <link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true" />
    </environment>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a asp-area="" asp-controller="Home" asp-action="Index" class="navbar-brand">TakagiSugeno</a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li class="dropdown">
                       <a asp-area="" asp-controller="SystemOverview" asp-action="Index" asp-route-systemId="@ViewBag.SystemId" id="SysId" data-system-id="@ViewBag.SystemId">System <span class="caret"></span></a>                           
                        <ul class="dropdown-menu">
                            <li><a asp-area="" asp-controller="Inputs" asp-action="SystemInputs" asp-route-systemId="@ViewBag.SystemId">Wejścia</a></li> <!--TODO-->
                            <li><a asp-area="" asp-controller="Outputs" asp-action="SystemOutputs" asp-route-systemId="@ViewBag.SystemId">Wyjścia</a></li>
                            <li><a asp-area="" asp-controller="Rules" asp-action="SystemRules" asp-route-systemId="@ViewBag.SystemId">Reguły</a></li> 
                            <li><a asp-area="" asp-controller="OutputCalc" asp-action="Index" asp-route-systemId="@ViewBag.SystemId">Wyznaczanie wyjść</a></li> 
                        </ul>
                    </li>  
                </ul>
            </div>
        </div>
    </div>
    @if (ViewBag.Title == "Wejścia")
    {
        @inject TakagiSugeno.Model.Services.InputsService InputService
        <div class="navbar navbar-inverse navbar-fixed-left">
            <div class="nav-header row">
                <div class="col-sm-8"><h3>Wejścia</h3></div>
                <div class="col-sm-4"><button class="btn btn-success pull-right" id="addInput" onclick="addInput()"><span class="glyphicon glyphicon-plus" ></span></button></div>
            </div>
            @{Html.RenderPartial("~/Views/Inputs/List.cshtml", InputService.GetSystemInputs(1));}
        <br /><br />
        </div>

    } 
    else if (ViewBag.Title == "Wyjścia")
    {
        @inject TakagiSugeno.Model.Services.OutputsService OutputService
        <div class="navbar navbar-inverse navbar-fixed-left ">
            <div class="nav-header row">
                <div class="col-sm-8"><h3>Wyjścia</h3></div>
                <div class="col-sm-4"><button class="btn btn-success pull-right" id="addOutput" onclick="addOutput()"><span class="glyphicon glyphicon-plus"></span></button></div>
            </div>
            @{Html.RenderPartial("~/Views/Outputs/List.cshtml", OutputService.GetSystemOutputs(1));}
            <br /><br />
        </div>
    }
    <div class="container body-content">
        @RenderBody()
    </div>

    <environment names="Development">
        <!--<script src="~/lib/jquery/dist/jquery.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
        <script src="~/lib/jquery.canvasjs.min.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>-->
    </environment>
    <environment names="Staging,Production">
        <script src="https://ajax.aspnetcdn.com/ajax/jquery/jquery-2.2.0.min.js"
                asp-fallback-src="~/lib/jquery/dist/jquery.min.js"
                asp-fallback-test="window.jQuery">
        </script>
        <script src="https://ajax.aspnetcdn.com/ajax/bootstrap/3.3.6/bootstrap.min.js"
                asp-fallback-src="~/lib/bootstrap/dist/js/bootstrap.min.js"
                asp-fallback-test="window.jQuery && window.jQuery.fn && window.jQuery.fn.modal">
        </script>
        <script src="~/js/site.min.js" asp-append-version="true"></script>
    </environment>

    @RenderSection("scripts", required: false)
</body>
</html>
